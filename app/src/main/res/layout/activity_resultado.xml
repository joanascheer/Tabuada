<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultado.ResultadoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16dp">

        <ImageView
            android:id="@+id/image_calculadora_resultado"
            android:contentDescription="@string/image_calculadora_description"
            android:layout_width="@dimen/size_120dp"
            android:layout_height="@dimen/size_120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="@dimen/margin_100dp"
            app:srcCompat="@drawable/image_calculadora" />

        <TextView
            android:id="@+id/resultado_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_30dp"
            android:textStyle="bold"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/textSize18"
            app:layout_constraintTop_toBottomOf="@id/image_calculadora_resultado"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 0"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_top"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_0"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_3"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 5"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_4"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 6"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_5"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 7"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_6"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 8"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_7"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 9"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_8"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/resultado_text_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resultado x 10"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintTop_toBottomOf="@id/resultado_text_9"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnNovoCalculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/novo_calculo_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultado_text_10" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>